{% extends 'base.html.twig' %}

{% block title %}Manage Authors - Admin{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-person"></i> Manage Authors</h1>
    <a href="{{ path('app_admin_author_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Author
    </a>
</div>

{% if authors|length > 0 %}
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Biography</th>
                            <th>Books</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for author in authors %}
                            <tr>
                                <td>{{ author.name }}</td>
                                <td>
                                    {% if author.biography %}
                                        {{ author.biography|length > 100 ? author.biography|slice(0, 100) ~ '...' : author.biography }}
                                    {% else %}
                                        <span class="text-muted">No biography</span>
                                    {% endif %}
                                </td>
                                <td>{{ author.books|length }}</td>
                                <td>
                                    <a href="{{ path('app_admin_author_show', {id: author.id}) }}" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_admin_author_edit', {id: author.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pen"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_admin_author_delete', {id: author.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this author?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ author.id) }}">
                                        <button class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center mt-3">
        {{ knp_pagination_render(authors) }}
    </div>
{% else %}
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No authors found. Start by adding a new author.
    </div>
{% endif %}
{% endblock %}
