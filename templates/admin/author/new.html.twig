{% extends 'base.html.twig' %}

{% block title %}Add New Author - Admin{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8">
        <h1 class="mb-4">
            <i class="bi bi-plus-circle"></i> Add New Author
        </h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.biography, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.biography) }}
                        {{ form_errors(form.biography) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_admin_author_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Create Author
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
