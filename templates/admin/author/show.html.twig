{% extends 'base.html.twig' %}

{% block title %}{{ author.name }} - Admin{% endblock %}

{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_admin_dashboard') }}">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_admin_author_index') }}">Authors</a></li>
        <li class="breadcrumb-item active">{{ author.name }}</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>{{ author.name }}</h1>
    <div>
        <a href="{{ path('app_admin_author_edit', {id: author.id}) }}" class="btn btn-warning">
            <i class="bi bi-pen"></i> Edit
        </a>
        <form method="post" action="{{ path('app_admin_author_delete', {id: author.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this author?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ author.id) }}">
            <button class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
        </form>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">Biography</h5>
        <p class="card-text">
            {% if author.biography %}
                {{ author.biography }}
            {% else %}
                <span class="text-muted">No biography available</span>
            {% endif %}
        </p>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Books by {{ author.name }} ({{ author.books|length }})</h5>
    </div>
    <div class="card-body">
        {% if author.books|length > 0 %}
            <ul class="list-group">
                {% for book in author.books %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ book.title }}
                        <a href="{{ path('app_admin_book_show', {id: book.id}) }}" class="btn btn-sm btn-outline-primary">View</a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="text-muted mb-0">This author has no books yet.</p>
        {% endif %}
    </div>
</div>

<div class="mt-3">
    <a href="{{ path('app_admin_author_index') }}" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>
{% endblock %}
