{% extends 'base.html.twig' %}

{% block title %}Manage Books - Admin{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-book"></i> Manage Books</h1>
    <a href="{{ path('app_admin_book_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Book
    </a>
</div>

{% if books|length > 0 %}
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Authors</th>
                            <th>Category</th>
                            <th>ISBN</th>
                            <th>Available</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for book in books %}
                            <tr>
                                <td>{{ book.title }}</td>
                                <td>
                                    {% for author in book.authors %}
                                        {{ author.name }}{% if not loop.last %}, {% endif %}
                                    {% endfor %}
                                </td>
                                <td>
                                    {% if book.category %}
                                        <span class="badge bg-secondary">{{ book.category.name }}</span>
                                    {% endif %}
                                </td>
                                <td>{{ book.isbn }}</td>
                                <td>{{ book.availableCopies }}</td>
                                <td>
                                    <a href="{{ path('app_admin_book_show', {id: book.id}) }}" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_admin_book_edit', {id: book.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pen"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_admin_book_delete', {id: book.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this book?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                                        <button class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center mt-3">
        {{ knp_pagination_render(books) }}
    </div>
{% else %}
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No books found. Start by adding a new book.
    </div>
{% endif %}
{% endblock %}
