{% extends 'base.html.twig' %}

{% block title %}{{ book.title }} - Admin{% endblock %}

{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_admin_dashboard') }}">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_admin_book_index') }}">Books</a></li>
        <li class="breadcrumb-item active">{{ book.title }}</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>{{ book.title }}</h1>
    <div>
        <a href="{{ path('app_admin_book_edit', {id: book.id}) }}" class="btn btn-warning">
            <i class="bi bi-pen"></i> Edit
        </a>
        <form method="post" action="{{ path('app_admin_book_delete', {id: book.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this book?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
            <button class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th style="width: 200px;">Title</th>
                    <td>{{ book.title }}</td>
                </tr>
                <tr>
                    <th>ISBN</th>
                    <td>{{ book.isbn }}</td>
                </tr>
                <tr>
                    <th>Authors</th>
                    <td>
                        {% for author in book.authors %}
                            {{ author.name }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Category</th>
                    <td>
                        {% if book.category %}
                            {{ book.category.name }}
                        {% else %}
                            <span class="text-muted">None</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Publication Date</th>
                    <td>
                        {% if book.publicationDate %}
                            {{ book.publicationDate|date('F j, Y') }}
                        {% else %}
                            <span class="text-muted">Not specified</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Available Copies</th>
                    <td>{{ book.availableCopies }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>
                        {% if book.description %}
                            {{ book.description }}
                        {% else %}
                            <span class="text-muted">No description</span>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a href="{{ path('app_admin_book_index') }}" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>
{% endblock %}
