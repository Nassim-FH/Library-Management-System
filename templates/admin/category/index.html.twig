{% extends 'base.html.twig' %}

{% block title %}Manage Categories - Admin{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-folder"></i> Manage Categories</h1>
    <a href="{{ path('app_admin_category_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Category
    </a>
</div>

{% if categories|length > 0 %}
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Books</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.name }}</td>
                                <td>
                                    {% if category.description %}
                                        {{ category.description|length > 100 ? category.description|slice(0, 100) ~ '...' : category.description }}
                                    {% else %}
                                        <span class="text-muted">No description</span>
                                    {% endif %}
                                </td>
                                <td>{{ category.books|length }}</td>
                                <td>
                                    <a href="{{ path('app_admin_category_show', {id: category.id}) }}" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_admin_category_edit', {id: category.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pen"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_admin_category_delete', {id: category.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                        <button class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center mt-3">
        {{ knp_pagination_render(categories) }}
    </div>
{% else %}
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No categories found. Start by adding a new category.
    </div>
{% endif %}
{% endblock %}
