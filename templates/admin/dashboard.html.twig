{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<h1 class="mb-4">
    <i class="bi bi-speedometer2"></i> Admin Dashboard
</h1>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-book"></i> Total Books</h5>
                <p class="card-text display-4">{{ total_books }}</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-folder"></i> Categories</h5>
                <p class="card-text display-4">{{ total_categories }}</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-people"></i> Users</h5>
                <p class="card-text display-4">{{ total_users }}</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-clock"></i> Active Loans</h5>
                <p class="card-text display-4">{{ active_borrowings|length }}</p>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-book"></i> Quick Actions
            </div>
            <div class="list-group list-group-flush">
                <a href="{{ path('app_admin_book_new') }}" class="list-group-item list-group-item-action">
                    <i class="bi bi-plus-circle"></i> Add New Book
                </a>
                <a href="{{ path('app_admin_author_new') }}" class="list-group-item list-group-item-action">
                    <i class="bi bi-plus-circle"></i> Add New Author
                </a>
                <a href="{{ path('app_admin_category_new') }}" class="list-group-item list-group-item-action">
                    <i class="bi bi-plus-circle"></i> Add New Category
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <i class="bi bi-exclamation-triangle"></i> Active Borrowings
            </div>
            <div class="card-body">
                {% if active_borrowings|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Book</th>
                                    <th>Due Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for borrowing in active_borrowings|slice(0, 10) %}
                                    <tr {% if borrowing.isOverdue %}class="table-danger"{% endif %}>
                                        <td>{{ borrowing.user.username }}</td>
                                        <td>{{ borrowing.book.title }}</td>
                                        <td>{{ borrowing.dueDate|date('M j, Y') }}</td>
                                        <td>
                                            {% if borrowing.isOverdue %}
                                                <span class="badge bg-danger">Overdue</span>
                                            {% else %}
                                                <span class="badge bg-success">Active</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% if active_borrowings|length > 10 %}
                        <p class="text-muted text-center mb-0">
                            Showing 10 of {{ active_borrowings|length }} active borrowings
                        </p>
                    {% endif %}
                {% else %}
                    <p class="text-muted mb-0">No active borrowings at the moment.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
