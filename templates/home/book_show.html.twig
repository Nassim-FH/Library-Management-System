{% extends 'base.html.twig' %}

{% block title %}{{ book.title }} - Library Management System{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb" style="background: white; padding: 1rem; border-radius: 12px;">
                <li class="breadcrumb-item">
                    <a href="{{ path('app_home') }}" style="color: #667eea; text-decoration: none;">
                        <i class="bi bi-house-door"></i> Home
                    </a>
                </li>
                <li class="breadcrumb-item active">{{ book.title }}</li>
            </ol>
        </nav>

        <div class="mb-4">
            <h1 class="display-5 fw-bold mb-2">{{ book.title }}</h1>
            {% if book.authors|length > 0 %}
                <h4 class="text-muted">
                    <i class="bi bi-person-fill"></i> 
                    by {% for author in book.authors %}{{ author.name }}{% if not loop.last %}, {% endif %}{% endfor %}
                </h4>
            {% endif %}
        </div>

        <div class="card mb-4">
            <div class="card-body p-4">
                <h5 class="fw-bold mb-4">
                    <i class="bi bi-info-circle"></i> Book Information
                </h5>
                
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="p-3" style="background: #f8f9fa; border-radius: 12px;">
                            <small class="text-muted d-block mb-1">ISBN</small>
                            <strong>{{ book.isbn }}</strong>
                        </div>
                    </div>
                    
                    {% if book.publicationDate %}
                    <div class="col-md-6">
                        <div class="p-3" style="background: #f8f9fa; border-radius: 12px;">
                            <small class="text-muted d-block mb-1">Publication Date</small>
                            <strong>{{ book.publicationDate|date('F j, Y') }}</strong>
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if book.category %}
                    <div class="col-md-6">
                        <div class="p-3" style="background: #f8f9fa; border-radius: 12px;">
                            <small class="text-muted d-block mb-1">Category</small>
                            <span class="badge" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); font-size: 0.9rem;">
                                {{ book.category.name }}
                            </span>
                        </div>
                    </div>
                    {% endif %}
                    
                    <div class="col-md-6">
                        <div class="p-3" style="background: #f8f9fa; border-radius: 12px;">
                            <small class="text-muted d-block mb-1">Availability</small>
                            {% if book.isAvailable %}
                                <span class="badge bg-success" style="font-size: 0.9rem;">
                                    <i class="bi bi-check-circle"></i> Available ({{ book.availableCopies }} copies)
                                </span>
                            {% else %}
                                <span class="badge bg-danger" style="font-size: 0.9rem;">
                                    <i class="bi bi-x-circle"></i> Not Available
                                </span>
                            {% endif %}
                        </div>
                    </div>
                </div>

                {% if book.description %}
                    <div class="mt-4 pt-4 border-top">
                        <h5 class="fw-bold mb-3">
                            <i class="bi bi-journal-text"></i> Description
                        </h5>
                        <p class="text-muted" style="line-height: 1.8;">{{ book.description }}</p>
                    </div>
                {% endif %}

                {% if book.authors|length > 0 %}
                    <div class="mt-4 pt-4 border-top">
                        <h5 class="fw-bold mb-3">
                            <i class="bi bi-people"></i> About the Authors
                        </h5>
                        {% for author in book.authors %}
                            <div class="mb-3 p-3" style="background: #f8f9fa; border-radius: 12px;">
                                <h6 class="fw-semibold mb-2">{{ author.name }}</h6>
                                {% if author.biography %}
                                    <p class="text-muted mb-0" style="font-size: 0.9rem;">
                                        {{ author.biography|length > 300 ? author.biography|slice(0, 300) ~ '...' : author.biography }}
                                    </p>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card sticky-top" style="top: 20px;">
            <div class="card-body p-4">
                <h5 class="fw-bold mb-4">
                    <i class="bi bi-lightning"></i> Quick Actions
                </h5>
                
                {% if app.user %}
                    {% if book.isAvailable %}
                        <form method="post" action="{{ path('app_borrow_book', {id: book.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('borrow' ~ book.id) }}">
                            <button type="submit" class="btn btn-success btn-lg w-100 mb-3">
                                <i class="bi bi-bookmark-plus"></i> Borrow This Book
                            </button>
                        </form>
                        <div class="alert alert-info d-flex align-items-start" style="background: linear-gradient(135deg, #e0f7ff 0%, #d4f1f4 100%); border: none;">
                            <i class="bi bi-info-circle-fill me-2 mt-1"></i>
                            <small>Books must be returned within <strong>14 days</strong> from borrowing date.</small>
                        </div>
                    {% else %}
                        <button class="btn btn-secondary btn-lg w-100" disabled>
                            <i class="bi bi-x-circle"></i> Currently Unavailable
                        </button>
                        <p class="text-muted text-center mt-3 mb-0">
                            <small>This book is out of stock. Check back later!</small>
                        </p>
                    {% endif %}
                {% else %}
                    <div class="alert alert-warning" style="border: none; border-radius: 12px;">
                        <p class="mb-2">
                            <i class="bi bi-lock-fill"></i> <strong>Sign in required</strong>
                        </p>
                        <p class="mb-3 small">Please login to borrow books from our library.</p>
                        <a href="{{ path('app_login') }}" class="btn btn-primary w-100">
                            <i class="bi bi-box-arrow-in-right"></i> Login Now
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>

        {% if book.category %}
        <div class="card mt-4">
            <div class="card-body p-4">
                <h5 class="fw-bold mb-3">
                    <i class="bi bi-bookmark"></i> Category
                </h5>
                <h6 class="mb-2">{{ book.category.name }}</h6>
                {% if book.category.description %}
                    <p class="text-muted small mb-0">{{ book.category.description }}</p>
                {% endif %}
            </div>
        </div>
        {% endif %}
        
        <div class="card mt-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
            <div class="card-body p-4 text-center">
                <i class="bi bi-book" style="font-size: 2.5rem; opacity: 0.8;"></i>
                <h6 class="mt-3 mb-2">Enjoy Reading!</h6>
                <small style="opacity: 0.9;">Expand your knowledge with our collection</small>
            </div>
        </div>
    </div>
</div>
{% endblock %}
