{% extends 'base.html.twig' %}

{% block title %}Register - Library Management System{% endblock %}

{% block body %}
<div class="row justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="col-md-6 col-lg-5">
        <div class="card border-0" style="box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="mb-3">
                        <i class="bi bi-person-plus-fill" style="font-size: 3rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
                    </div>
                    <h2 class="fw-bold mb-2">Create Account</h2>
                    <p class="text-muted">Join our library community today</p>
                </div>

                {{ form_start(registrationForm) }}
                    <div class="mb-4">
                        {{ form_label(registrationForm.username, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Choose a username'}}) }}
                        {{ form_errors(registrationForm.username) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'your@email.com'}}) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(registrationForm.plainPassword.first, 'Password', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Create a strong password'}}) }}
                        {{ form_errors(registrationForm.plainPassword.first) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(registrationForm.plainPassword.second, 'Confirm Password', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Repeat your password'}}) }}
                        {{ form_errors(registrationForm.plainPassword.second) }}
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>

                    <div class="d-grid mb-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-person-plus"></i> Create Account
                        </button>
                    </div>

                    <div class="text-center">
                        <p class="text-muted mb-0">
                            Already have an account? 
                            <a href="{{ path('app_login') }}" class="fw-semibold" style="color: #667eea; text-decoration: none;">
                                Sign In
                            </a>
                        </p>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
        
        <div class="text-center mt-4">
            <a href="{{ path('app_home') }}" class="text-muted" style="text-decoration: none;">
                <i class="bi bi-arrow-left"></i> Back to Home
            </a>
        </div>
    </div>
</div>
{% endblock %}
